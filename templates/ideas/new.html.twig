{% extends "base.html.twig" %}

{% block title %}New ideas{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/back.css') }}">

    <style>
        h5 {
            font-size: 35px;
        }
    </style>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert bg-success" role="alert">
            <strong>
                {{ flashMessage }}
                <img src="{{ asset('img/animat-essential/checkmark/animat-checkmark.gif') }}"
                     style="height: 60px; width: 60px; -webkit-filter: invert(100%);filter: invert(100%);" alt="ok">
            </strong>
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert bg-danger" role="alert">
            <strong>
                {{ flashMessage }}
                <img src="{{ asset('img/animat-essential/customize/animat-customize.gif') }}"
                     style="height: 60px; width: 60px; -webkit-filter: invert(100%);filter: invert(100%);"
                     alt="error">
            </strong>
        </div>
    {% endfor %}

    <form method="post" action="{{ path('ideas_new') }}">

        <div class="d-flex flex-column">
            <i onmouseover="style='filter: drop-shadow(1px 1px 8px yellow); font-size: 800%'" onmouseleave="style= 'filter: none; font-size: 800%'" class="mx-auto mb-md-5 mt-5 far fa-lightbulb" style="font-size: 800%"></i>
            <p class="mt-5 mt-md-2 mb-5 mb-md-5" style="text-align: center; font-size: 25px">Write your idea for Preston</p>
            <textarea minlength="10" required class="mx-auto col-11 col-md-4 pt-3" name="ideaText" id="ideaText" rows="5" style="border-radius: 15px"></textarea>
            <button class="mx-auto mt-2 w-md-25 w-100 col-11 pb-3 pt-3 col-md-1" style="border: 0; background: #1b336b">send</button>
        </div>

    </form>

{% endblock %}