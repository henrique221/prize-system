{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block javascriptStyles %}

    <script type="text/javascript">
        var imageURLs = [
            "{{ asset('img/cristiano-ronaldo-icon.png') }}",
            "{{ asset('img/dalai-lama-icon.png') }}",
            "{{ asset('img/dave-grohl-icon.png') }}",
            "{{ asset('img/girl-in-ballcap-icon.png') }}",
            "{{ asset('img/indian-man-icon.png') }}",
            "{{ asset('img/charlie-chaplin-icon.png') }}",
            "{{ asset('img/robot-01-icon.png') }}",
            "{{ asset('img/muslim-woman-icon.png') }}",
            "{{ asset('img/barack-obama-icon.png') }}",
            "{{ asset('img/traditiona-japanese-man-icon.png') }}",
            "{{ asset('img/stalin-icon.png') }}",
            "{{ asset('img/vladimir-lenin-icon.png') }}",
            "{{ asset('img/robot-03-icon.png') }}",
            "{{ asset('img/batman-icon.png') }}"
        ];
        function getImageTag() {
            var img = '<img src=\"';
            var randomIndex = Math.floor(Math.random() * imageURLs.length);
            img += imageURLs[randomIndex];
            img += '\" alt=\"Preston" style="width:200px; height: 200px;"/>';
            return img;
        }
    </script>

{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center">
        <script type="text/javascript">
            document.write(getImageTag());
        </script>
    </div>

    <p class="text-center text-white m-5" style="font-size: 22px">Com o Preston vc pode<span class="text-center text-white" id="typed3"></span> seus funcionários</p>


    <form class="d-flex justify-content-center mt-5 text-center" method="post">

        <div class="d-flex col-md-2 flex-column">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="text-white m-5">Login Preston</h1>
            <div class="d-flex flex-row">
            <i class="text-white fa fa-user my-auto mr-2"></i>
            <input type="text" value="{{ last_username }}" name="login" id="inputLogin" class="form-control"
                   placeholder="Login" required autofocus>
            </div>
            <br>
            <div class="d-flex flex-row">
            <i class="text-white fa fa-lock my-auto mr-2"></i>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Senha"
                   required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >


            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <div class="main">
                <button class="button btn btn-primary mt-4" type="submit">Entrar</button>

                <div class="loader">
                    <div class="check">
                        <span class="check-one"></span>
                        <span class="check-two"></span>
                    </div>
                </div>

            </div>
        </div>

    </form>

    <video autoplay loop class="bg_video z2">
        <source src="{{ asset('img/tech.mp4') }}" type="video/mp4">
    </video>

{% endblock %}
{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var btn = document.querySelector('.button'),
                loader = document.querySelector('.loader'),
                check = document.querySelector('.check');

            btn.addEventListener('click', function () {
                loader.classList.add('active');
            });

            loader.addEventListener('animationend', function () {
                check.classList.add('active');
            });
        });

        var typed3 = new Typed('#typed3', {
            strings: ['<span> atribuir premiações para</span>', '<span> salvar as datas de aniversários dos<span>', '<span> enviar notificações via <strong>Slack</strong> para<span>'],
            typeSpeed: 30,
            backDelay: 2000,
            startDelay: 50,
            backSpeed: 40,
            cursorChar: '',
            smartBackspace: true, // this is a default
            loop: true
        });

    </script>

{% endblock %}