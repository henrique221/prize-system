{% extends "base.html.twig" %}

{% block stylesheets %}
    <style>
        body {
            background: #0f6674;
        }
        input {
            font-family:"lato", sans-serif;
        }
        @media only screen and (min-width: 600px) {
            #usuario_permissoes {
                width: 160%;
            }
        }
        @media only screen and (max-width: 600px) {
            #usuario_permissoes {
                float: left;
                width: 250px;
            }
        }
        #usuario_permissoes input{
            margin-top: auto; !important;
            margin-bottom: auto;!important;
        }

        #usuario_permissoes label{
            margin-top: 5px; !important;
            margin-bottom: 5px;!important;
            margin-left: 2px;
            margin-right: 25px;
        }

        .users label{
            color: #1b1e21!important;
        }
    </style>
{% endblock %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert bg-success" role="alert">
            <strong>
                {{ flashMessage }}
                <img src="{{ asset('img/animat-essential/checkmark/animat-checkmark.gif') }}" style="height: 60px; width: 60px; -webkit-filter: invert(100%);filter: invert(100%);" alt="ok">
            </strong>
        </div>
    {% endfor %}

    <section class="jumbotron" style="background: #1b2735">
        <h1 class="text-white mb-md-5">Create new access</h1>
        <div class="d-flex">
            <form method="post" class="col-md-5">
                {{ form_start(form) }}

                <div class="d-flex flex-md-row flex-column justify-content-between mb-2">
                    <div style="font-family: 'lato', sans-serif;">{{ form_label(form.login) }}</div>
                    <div>{{ form_widget(form.login) }}</div>
                </div>

                <div class="d-flex flex-md-row flex-column justify-content-between mb-2">
                    <div style="font-family: 'lato', sans-serif;">{{ form_label(form.name) }}</div>
                    <div>{{ form_widget(form.name) }}</div>
                </div>

                <div class="d-flex flex-md-row flex-column justify-content-between mb-2">
                    <div style="font-family: 'lato', sans-serif;">{{ form_label(form.senha) }}</div>
                    <div>{{ form_widget(form.senha) }}</div>
                </div>

                <div class="d-flex flex-md-row flex-column justify-content-between mb-2">
                    <div style="font-family: 'lato', sans-serif; color: #1b1e21 !important;">{{ form_label(form.permissoes) }}</div>
                    <div class="d-flex">{{ form_widget(form.permissoes) }}</div>
                </div>

                <div class="d-flex flex-row justify-content-between">
                    <a style="font-size: 30px" href="{{ path('preston') }}"><i class="fas fa-arrow-circle-left"></i></a>
                    <button class="pt-1 pb-1" type="submit">save</button>
                </div>

                {{ form_end(form) }}
            </form>
        </div>

    </section>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $("#usuario_login").keyup(function () {
                $(this).val(function(_, v){
                    return v.replace(/\s+/g, '');
                });
            })
        });
    </script>
{% endblock %}